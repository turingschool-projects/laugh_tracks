<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    <title>Funny People</title>

     <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  </head>

  <body>
    <div class="jumbotron">
      <div class="container">
        <h1>Comedians</h1>
          <h3>Statistics</h3>
        <p>Average Age of Comedians: <%= @average_age %><p>
          <p>Cities: <%= @cities %><p>
      </div>
    </div>

        <section id="comedians">
        <% @comedians.each do |comedian| %>
          <div id="comedian-<%= comedian.id %>">
            <h1> <%= comedian.name %> </h1>
            <img class="comedian_img" src="<%=comedian.img_url%>"> </img>
            <p>
              Age: <%= comedian.age %>
              Home: <%= comedian.city %>
            </p>

            <h3 class="specials">Specials</h3>
                <p>Number of specials: <%= comedian.specials.count %></p>
                <% comedian.specials.each do |special| %>
                  <p>"<%= special.name %>"     Runtime <%= special.run_time %> mins</p>
                <% end %>
          </div>
        <% end %>
        </section>

  </body>
</html>
